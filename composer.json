{
    "name": "upmind/webhook-endpoint",
    "description": "Library to simplify server implementations for receiving webhooks from Upmind",
    "type": "library",
    "license": "GPL-3.0-only",
    "autoload": {
        "psr-4": {
            "Upmind\\Webhooks\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Upmind\\Webhooks\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Harry Lewis",
            "email": "harry@upmind.com"
        }
    ],
    "require": {
        "psr/http-message": "^1.0|^2.0"
    },
    "require-dev": {
        "nyholm/psr7": "^1.8",
        "phpunit/phpunit": "^9.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    }
}
